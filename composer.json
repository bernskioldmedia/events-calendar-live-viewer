{
  "name": "bernskioldmedia/events-calendar-live-viewer",
  "description": "An auto-updating live viewer for virtual events in The Events Calendar.",
  "type": "wordpress-plugin",
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "prefer-stable": true,
  "minimum-stability": "dev",
  "require": {
    "php": "^7.4|^8.0",
    "bernskioldmedia/wp-plugin-base": "^2.4.0",
    "composer/installers": "~1.0"
  },
  "require-dev": {
    "bernskioldmedia/bm-wp-devtools": "dev-main"
  },
  "license": "GPL-3.0+",
  "authors": [
    {
      "name": "Bernskiold Media",
      "email": "info@bernskioldmedia.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "BernskioldMedia\\WP\\EventsCalendarLiveViewer\\": "src/"
    },
    "classmap": [
      "vendor_prefixed/"
    ]
  },
  "scripts": {
    "lint": "php-cs-fixer fix -v",
    "test:cs": "phpcs-wp",
    "test:types": "phpstan analyse --ansi --memory-limit=-1",
    "test:lint": "php-cs-fixer fix -v --dry-run",
    "test": [
      "@test:lint",
      "@test:types"
    ],
    "build": [
      "composer prefix-dependencies",
      "composer dump-autoload"
    ],
    "prefix-dependencies": [
      "composer require humbug/php-scoper:dev-master --dev -W",
      "php ./vendor/humbug/php-scoper/bin/php-scoper add-prefix --prefix=ECLW_Vendor --config config/php-scoper/bm-wp-plugin-base.php --output-dir vendor_prefixed/bernskioldmedia/wp-plugin-base --force",
      "composer remove humbug/php-scoper --dev"
    ]
  }
}
